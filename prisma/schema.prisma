generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum PartCondition {
  BOA
  MEDIA
  RUIM
}

model Car {
  id          String   @id @default(uuid())
  internal_id String   @unique
  brand       String
  model       String
  year        Int
  color       String
  part        Part[]
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  @@map("cars")
}

model Part {
  id               String         @id @default(uuid())
  name             String         @db.Text
  description      String         @db.Text
  condition        PartCondition
  stock_address    String?
  dimensions       Json?
  weight           Decimal?       @db.Decimal(5, 2)
  compatibility    Json?
  min_price        Decimal?       @db.Decimal(10, 2)
  suggested_price  Decimal?       @db.Decimal(10, 2)
  max_price        Decimal?       @db.Decimal(10, 2)
  ad_title         String?        @db.Text
  ad_description   String?        @db.Text
  images           Json?
  created_at       DateTime       @default(now())
  updated_at       DateTime       @updatedAt
  car_id           String
  car              Car            @relation(fields: [car_id], references: [id])

  @@map("parts")
}