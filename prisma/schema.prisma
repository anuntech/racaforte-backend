generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum PartCondition {
  BOA
  MEDIA
  RUIM
}

model Part {
  id               String        @id @default(uuid())
  name             String        @db.Text
  brand            String        @db.Text
  year             Int
  condition        PartCondition
  stock_address    String        @db.Text
  dimensions       Json          @db.Json
  weight           Decimal?      @db.Decimal(5, 2)
  compatibility    Json?         @db.Json
  min_price        Decimal?      @db.Decimal(10, 2)
  suggested_price  Decimal?      @db.Decimal(10, 2)
  max_price        Decimal?      @db.Decimal(10, 2)
  part_description String?       @db.Text
  images           Json          @db.Json
  created_at       DateTime      @default(now())
}